<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.example.news2.data.model.NewsDbModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        android:clickable="true"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_background"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/imageViewCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <ProgressBar
                    android:id="@+id/imgProgressBar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:elevation="3dp"
                    />
                <ImageView
                    android:id="@+id/sliderImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"

                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    />
            </androidx.cardview.widget.CardView>


            <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:background="@drawable/rounded_category_slider"
                android:paddingHorizontal="14dp"
                android:paddingVertical="5dp"
                android:textAllCaps="true"
                android:text="@{model.category}"
                android:textColor="#FFFFFF"
                android:elevation="6dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewCardView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewCardView"
                tools:text="Sports" />

            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/sliderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:padding="8dp"
                android:textSize="18sp"
                android:text="@{model.title}"
                tools:text="Ukrainian ex-top official shot dead outside Madrid school"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewCardView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</layout>

