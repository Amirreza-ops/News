<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TabTextNormal" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#5E5E5E</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextNormal</item>
        <item name="tabSelectedTextAppearance">@style/CustomTabTextAppearance</item>
<!--        <item name="tabSelectedTextColor">#0667c9</item>-->
        <item name="tabIndicatorColor">#4f4f4f</item>
    </style>

</resources>